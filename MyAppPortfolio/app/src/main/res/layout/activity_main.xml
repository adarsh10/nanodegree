<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context="com.adarsh.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:textColor="#2d2d2d"
        android:textSize="24dp"/>

    <Button
        android:id="@+id/btn1"
        android:layout_marginTop="24dp"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:background="#3f51b5"
        android:textColor="#ffffff"
        android:text="Movie App" />

    <Button
        android:id="@+id/btn2"
        android:layout_marginTop="8dp"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:background="#3f51b5"
        android:textColor="#ffffff"
        android:text="Scores App" />

    <Button
        android:id="@+id/btn3"
        android:layout_marginTop="8dp"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:background="#3f51b5"
        android:textColor="#ffffff"
        android:text="Library App" />

    <Button
        android:id="@+id/btn4"
        android:layout_marginTop="8dp"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:background="#3f51b5"
        android:textColor="#ffffff"
        android:text="Build it Bigger" />

    <Button
        android:id="@+id/btn5"
        android:layout_marginTop="8dp"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:background="#3f51b5"
        android:textColor="#ffffff"
        android:text="XYZ Reader" />

    <Button
        android:id="@+id/btn6"
        android:layout_marginTop="8dp"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:background="#b6106e"
        android:textColor="#ffffff"
        android:text="Capstone: My own App" />


</LinearLayout>
